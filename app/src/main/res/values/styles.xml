<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="input_text_box_login" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/normal_spacing</item>
        <item name="android:layout_marginTop">@dimen/large_spacing</item>
        <item name="android:layout_marginEnd">@dimen/normal_spacing</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:importantForAutofill">no</item>
    </style>

    <style name="small_info_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/forgot_password</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="header_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/normal_spacing</item>
        <item name="android:layout_marginTop">@dimen/large_spacing</item>
        <item name="android:contentDescription">@string/sign_in_title</item>
        <item name="android:fontFamily">@font/nunito_extrabold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/extra_large_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="presentation_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/normal_spacing</item>
        <item name="android:layout_marginTop">@dimen/normal_spacing</item>
        <item name="android:contentDescription">@string/welcome_back_sign_in</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>
</resources>